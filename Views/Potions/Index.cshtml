@model IEnumerable<HogwartsPotions.Models.Entities.Potion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div  class="background-container potions-site" style="background-image: url(/images/openbook.jpg);">
    <p>
        <a asp-action="Create" id="create-id">Create New</a>
    </p>
    <div class="scrollable-table">
        <table class="table potions-table">
            <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    BrewingStatus
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrewingStatus)
                    </td>
                    <td>
                        <a asp-controller="Potions" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="Potions" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="Potions" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <footer class="sticky-footer">  
        <a asp-controller="Alchemy" asp-action="Index" id="recipe-backtoclass">Back to class</a>
    </footer>
</div>