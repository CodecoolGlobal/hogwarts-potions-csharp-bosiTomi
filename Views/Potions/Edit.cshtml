@model HogwartsPotions.Models.Entities.Potion

@{
    ViewData["Title"] = "Edit";
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="background-container edit-site" style="background-image: url(/images/openbook.jpg);">
    <h1 class="edit-h1">Edit</h1>

    <h4>Potion</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="BrewingStatus" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" id="edit-input" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="login-button button-55" />
                </div>
            </form>
        </div>
    </div>

<div>
    <a asp-action="Index" class="login-button button-55">Back to List</a>
</div>
</div>