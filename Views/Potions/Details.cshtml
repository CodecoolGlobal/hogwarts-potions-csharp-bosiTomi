@using HogwartsPotions.Models.Entities
@model HogwartsPotions.Models.Entities.Potion

@{
    ViewData["Title"] = "Details";
}
<!DOCTYPE html>
<html>
<head>
    <script src="~/lib/jquery/dist/jquery.min.js" ></script>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/css/form.css"/>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
</head>
<body>
<div class="background-container details-site" style="background-image: url(/images/openbook.jpg);">
    <h1 class="edit-h1">Details</h1>

<div>
    <h4>Potion</h4>
    <hr />
    <dl class="row" id="details-row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrewingStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrewingStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Ingredients)
        </dt>
        @foreach (Ingredient ing in ViewBag.Ingredients) {
            <dd class = "col-sm-10">
                @ing.Name
            </dd>
        }
    </dl>
</div>
    <div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="button-55 login-button">Edit</a> |
    <a asp-action="Index" class="button-55 login-button">Back to List</a>
</div>
</div>
</body>